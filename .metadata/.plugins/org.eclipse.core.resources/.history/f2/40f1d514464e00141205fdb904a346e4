package com.compsci408.alarms;

import android.app.PendingIntent;
import android.content.BroadcastReceiver;
import android.content.Context;
import android.content.Intent;

public class AlarmManagerHelper extends BroadcastReceiver {
	
    @Override
    public void onReceive(Context context, Intent intent) {
        setAlarms(context);
    }
 
    public static void setAlarms(Context context) {
 
    }
 
    public static void cancelAlarms(Context context) {
 
    }
 
    private static PendingIntent createPendingIntent(Context context, Alarm model) {
	    Intent intent = new Intent(context, AlarmService.class);
	    intent.putExtra(ID, model.mId);
	    intent.putExtra(NAME, model.mName);
	    intent.putExtra(TIME_HOUR, model.mTimeHour);
	    intent.putExtra(TIME_MINUTE, model.mTimeMinute);
	    intent.putExtra(TONE, model.mAlarmTone);
	 
	    return PendingIntent.getService(context, (int) model.mId, intent, PendingIntent.FLAG_UPDATE_CURRENT);
    }
}