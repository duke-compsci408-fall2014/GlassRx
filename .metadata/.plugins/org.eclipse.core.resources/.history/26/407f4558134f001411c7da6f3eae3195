package com.compsci408.requests;

import org.json.JSONArray;

import android.content.Context;
import android.net.ConnectivityManager;
import android.net.NetworkInfo;

public class HttpRequest {
	
	private static HttpRequest instance;
	
	private Context mContext;
	
	public static HttpRequest getRESTClient(Context context) {
		if (instance == null) {
			instance = new HttpRequest();
			instance.mContext = context;
		}
		return instance;
		
	}
	
	public void doGet(String url, ResponseCallback callback) {
		if (NetworkUtils.checkConnection(mContext)) {
			new GetTask(callback).execute(url);
		}
	}
	
	public void doPost(String url, ResponseCallback callback) {
		if (NetworkUtils.checkConnection(mContext)) {
			new PostTask(callback).execute(url);
		}
	}

}
