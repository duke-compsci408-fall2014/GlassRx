package com.compsci408.requests;

import android.content.Context;

public class HttpRequest {
	
	private static ServerRequest instance;
	
	private Context mContext;
	
	public static ServerRequest getRESTClient(Context context) {
		if (instance == null) {
			instance = new ServerRequest();
			instance.mContext = context;
		}
		return instance;
		
	}
	
	public void doGet(String url, ResponseCallback callback) {
		if (RequestUtils.checkConnection(mContext)) {
			new GetTask(callback).execute(url);
		}
	}
	
	public void doPost(String url, ResponseCallback callback) {
		if (RequestUtils.checkConnection(mContext)) {
			new PostTask(callback).execute(url);
		}
	}

}
