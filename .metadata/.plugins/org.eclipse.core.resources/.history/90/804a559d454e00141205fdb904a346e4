package com.compsci408.datatypes;

/**
 * Class describing the attributes of a
 * medication object.  Includes names,
 * colors, shapes, and associated alarms.
 * @author Evan
 *
 */
public class Medication {

	private static int mId;
	private static String mName;
	private static int mColor;
	private static int mShape;
	
	private String mNickname;	//  Unique name each patient can apply
	
	public Medication(int id, String name, int color, int shape) {
		setId(id);
		setName(name);
		setColor(color);
		setShape(shape);
	}

	public static int getId() {
		return mId;
	}

	public static void setId(int mId) {
		Medication.mId = mId;
	}

	public static String getName() {
		return mName;
	}

	public static void setName(String mName) {
		Medication.mName = mName;
	}

	public static int getColor() {
		return mColor;
	}

	public static void setColor(int mColor) {
		Medication.mColor = mColor;
	}

	public static int getShape() {
		return mShape;
	}

	public static void setShape(int mShape) {
		Medication.mShape = mShape;
	}

	public String getNickname() {
		return mNickname;
	}

	public void setNickname(String mNickname) {
		this.mNickname = mNickname;
	}
	
}
