<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.compsci408.androidrx.provider.NewMedActivity" >

    <EditText
        android:id="@+id/new_med_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="@string/new_med"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/add_med_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dosagePicker"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:text="Add" />

    <Button
        android:id="@+id/add_time_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_med_complete"
        android:layout_alignLeft="@+id/add_med_complete"
        android:layout_marginBottom="30dp"
        android:onClick="addNewTime"
        android:text="Add New Time" />

    <NumberPicker
        android:id="@+id/dosagePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_med_title"
        android:layout_below="@+id/new_med_title"
        android:layout_marginTop="41dp" />

    <TextView
        android:id="@+id/dosageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/new_med_title"
        android:layout_alignTop="@+id/dosagePicker"
        android:layout_marginTop="50dp"
        android:text="Dosage"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>